{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vaults_KeyVault_CoursCloud_name": {
            "type": "String"
        },
        "virtualMachineScaleSets_VM_group_name": {
            "defaultValue": "VM-group",
            "type": "String"
        },
        "virtualNetworks_VM1_vnet_externalid": {
            "type": "String"
        },
        "loadBalancers_LoadBalancer_Devoir1_externalid": {
            "type": "String"
        },
        "networkSecurityGroups_basicNsgVM1_vnet_nic01_externalid": {
            "type": "String"
        },
        "adminPassSecret": {
            "type": "String"
        },
        "secret1Secret": {
            "type": "String"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachineScaleSets",
            "apiVersion": "2024-07-01",
            "name": "[parameters('virtualMachineScaleSets_VM_group_name')]",
            "location": "eastus",
            "sku": {
                "name": "Standard_DC1s_v2",
                "tier": "Standard",
                "capacity": 2
            },
            "zones": [
                "1",
                "2"
            ],
            "properties": {
                "singlePlacementGroup": false,
                "orchestrationMode": "Flexible",
                "upgradePolicy": {
                    "mode": "Manual"
                },
                "virtualMachineProfile": {
                    "osProfile": {
                        "computerNamePrefix": "vm-groups",
                        "adminUsername": "coursCloud",
                        "adminPassword": "[reference(concat('https://', parameters('vaults_KeyVault_CoursCloud_name'), '.vault.azure.net/secrets/', parameters('adminPassSecret')), '2024-04-01').value]",
                        "linuxConfiguration": {
                            "disablePasswordAuthentication": true,
                            "ssh": {
                                "publicKeys": [
                                    {
                                        "path": "/home/coursCloud/.ssh/authorized_keys",
                                        "keyData": "ssh-rsa  generated-by-azure"
                                    }
                                ]
                            },
                            "provisionVMAgent": true,
                            "patchSettings": {
                                "patchMode": "ImageDefault",
                                "assessmentMode": "ImageDefault"
                            }
                        }
                    },
                    "storageProfile": {
                        "osDisk": {
                            "osType": "Linux",
                            "createOption": "FromImage",
                            "caching": "ReadWrite",
                            "managedDisk": {
                                "storageAccountType": "Premium_LRS"
                            },
                            "deleteOption": "Delete",
                            "diskSizeGB": 30
                        },
                        "imageReference": {
                            "publisher": "canonical",
                            "offer": "ubuntu-24_04-lts",
                            "sku": "server",
                            "version": "latest"
                        },
                        "diskControllerType": "SCSI"
                    },
                    "networkProfile": {
                        "networkInterfaceConfigurations": [
                            {
                                "name": "VM1-vnet-nic01",
                                "properties": {
                                    "primary": true,
                                    "ipConfigurations": [
                                        {
                                            "name": "VM1-vnet-nic01-defaultIpConfiguration",
                                            "properties": {
                                                "privateIPAddressVersion": "IPv4",
                                                "subnet": {
                                                    "id": "[concat(parameters('virtualNetworks_VM1_vnet_externalid'), '/subnets/default')]"
                                                },
                                                "primary": true
                                            }
                                        }
                                    ],
                                    "networkSecurityGroup": {
                                        "id": "[parameters('networkSecurityGroups_basicNsgVM1_vnet_nic01_externalid')]"
                                    },
                                    "dnsSettings": {
                                        "dnsServers": []
                                    }
                                }
                            }
                        ]
                    },
                    "diagnosticsProfile": {
                        "bootDiagnostics": {
                            "enabled": true
                        }
                    },
                    "extensionProfile": {
                        "extensions": []
                    },
                    "securityProfile": {
                        "uefiSettings": {
                            "secureBootEnabled": true,
                            "vTpmEnabled": true
                        },
                        "securityType": "TrustedLaunch"
                    }
                },
                "additionalCapabilities": {
                    "hibernationEnabled": false
                },
                "zoneBalance": false,
                "platformFaultDomainCount": 1,
                "constrainedMaximumCapacity": false
            }
        }
    ]
}
